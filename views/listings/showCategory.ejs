<% layout("/layouts/boilerplate") %>

<head>
	<style>
		/* Set a fixed height for product images */
		.product-img img {
			width: 100%;
			height: 200px; /* Adjust this value to your preference */
			object-fit: cover;
			display: block;
		}

		.list-image{
			width: 100%;
			height: 200px; /* Adjust this value to your preference */
			object-fit: cover;
			display: block;
		}
		/* favourite-icon styling */

		.favourite-icon {
			background-color: white; /* White background for the circle */
			border-radius: 50%; /* Makes it circular */
			padding: 10px; /* Space around the icon */
			color: #e63946; /* Heart color */
			font-size: 11px; /* Adjust icon size */
			display: inline-flex; /* Align the icon inside the circle */
			align-items: center;
			justify-content: center;
			cursor: pointer;
			box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2); /* Optional shadow for depth */
			transition: background-color 0.3s, transform 0.2s;
			margin-bottom: 10px;
		}

		.favourite-icon:hover {
			background-color: #f8f9fa; /* Slightly darker background on hover */
			transform: scale(1.1); /* Slight zoom effect on hover */
		}

			

		.range-form {
			display: flex;
			flex-direction: column;
			width: 100%;
		}
		
		.range-inputs-container {
			display: flex;
			align-items: center;
			gap: 10px;
			width: 100%;
		}
		
		.range-input {
			min-width: 65px;
			padding: 8px;
			border: 1px solid #ccc;
			border-radius: 4px;
		}
		
		.range-connector {
			color: #666;
			font-size: 16px;
		}
		
		.apply-range-btn {
			padding: 8px 15px;
			background-color: #e6e9ed;
			color: #666;
			border: none;
			border-radius: 4px;
			cursor: pointer;
			transition: background-color 0.3s ease;
			margin-bottom: 20px;
		}
		
		.apply-range-btn:hover {
			background-color: #d7dbe0;
		}
	</style>

    </head>
    

<body>
	


	<!--====== BANNER PART START ======-->
	<section class="banner-area bg_cover">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="banner-content">
						<h1 class="text-white">All Categories</h1>
						<nav aria-label="breadcrumb">
							<ol class="breadcrumb">
								<li class="breadcrumb-item"><a href="index.html">Home</a></li>
								<li class="breadcrumb-item active" aria-current="page">Category</li>
							</ol>
						</nav>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!--====== BANNER PART END ======-->


	<!--====== CATEGORY PART START ======-->
